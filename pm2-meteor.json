{
  "appName": "todos",
  "appLocation": {
    "git": "https://github.com/carlosmbinf/react-download.git",
    "branch": "main"
  },
  "meteorSettingsLocation": "settings/production.json",
  "prebuildScript": "mrt install",
  "meteorBuildFlags": "--architecture os.linux.x86_64",
  "env": {
    "PORT": 3000,
    "MONGO_URL": "mongodb://localhost:3002/todos",
    "ROOT_URL": "http://localhost"
  },
  "server": {
    "host": "localhost",
    "username": "nodejs",
    "pem": "~/.ssh/id_rsa",
    "deploymentDir": "/home/nodejs/",
    "exec_mode": "cluster_mode",
    "instances": 2
  }
}
